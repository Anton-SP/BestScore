<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/padding_common">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_params"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/item_card_elevation"
        app:cardCornerRadius="@dimen/item_card_corner_radius"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/fab_delete_card">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_common">

            <TextView
                android:id="@+id/tv_player_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_player_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/ed_player_name"
                app:layout_constraintBottom_toBottomOf="@id/ed_player_name"/>

            <EditText
                android:id="@+id/ed_player_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_common"
                android:padding="@dimen/padding_common"
                android:background="#EFEFEF"
                app:layout_constraintStart_toStartOf="@id/ed_start_score"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_start_score_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_start_score"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/ed_start_score"
                app:layout_constraintBottom_toBottomOf="@id/ed_start_score"/>

            <EditText
                android:id="@+id/ed_start_score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_common"
                android:layout_marginEnd="@dimen/margin_common"
                android:padding="@dimen/padding_common"
                android:background="#EFEFEF"
                app:layout_constraintStart_toStartOf="@id/sw_take_when_calc"
                app:layout_constraintTop_toBottomOf="@id/ed_player_name"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_take_when_calc_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_take_when_calculating"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/sw_take_when_calc"
                app:layout_constraintBottom_toBottomOf="@id/sw_take_when_calc"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/sw_take_when_calc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_common"
                app:layout_constraintStart_toEndOf="@id/tv_take_when_calc_label"
                app:layout_constraintTop_toBottomOf="@id/ed_start_score"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_delete_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_common"
        android:backgroundTint="@color/white"
        android:src="@android:drawable/ic_menu_delete"
        app:layout_constraintStart_toEndOf="@id/card_params"
        app:layout_constraintTop_toTopOf="@id/card_params"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/card_params"/>

</androidx.constraintlayout.widget.ConstraintLayout>