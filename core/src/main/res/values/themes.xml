<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BestScore" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_variant_color</item>
        <item name="colorOnPrimary">@color/on_primary_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_variant_color</item>
        <item name="colorOnSecondary">@color/on_secondary_color</item>
        <!-- Background -->
        <item name="android:windowBackground">@color/main_background</item>
        <!-- StatusBar -->
        <item name="colorPrimaryDark">@color/primary_variant_color</item>

    </style>

    <style name="label_text">
        <item name="android:textSize">@dimen/label_text_textSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="common_text">
        <item name="android:textSize">@dimen/common_text_textSize</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="item_card_view">
        <item name="android:layout_margin">@dimen/common_margin</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
    </style>

</resources>